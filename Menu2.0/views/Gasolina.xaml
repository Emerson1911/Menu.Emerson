<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Menu2._0.views.Gasolina"
             Title="Gasolina">
    <VerticalStackLayout
         Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Image Source="gasolina.png"
               />

        <Label 
            Text="Gaslina cobrada por galones"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry Placeholder="Introduce la cantidad de litros de gasolina" x:Name="Litros" TextColor="Red"/>
        <Entry Placeholder="Introduzca costo de la gasolina" x:Name="Costo" TextColor="Coral"/>
        <Entry Placeholder="Total de galones" x:Name="Galones" TextColor="Green"/>
        <Entry Placeholder="Total a cobrar" x:Name="Cobrar" TextColor="Blue"/>
        <Button Text="Convertir" x:Name="Convercion" Clicked="Convercion_Clicked" BackgroundColor="Yellow" TextColor="Red"/>

    </VerticalStackLayout>
</ContentPage>