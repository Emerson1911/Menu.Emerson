<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Menu2._0.views.Cambio"
             Title="Cambio">
    <VerticalStackLayout 
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">
        
        
        <Image  Source="dinero.jfif"
                HeightRequest="200"
                HorizontalOptions="Center" />
        <Label 
            TextColor="Coral"
            Text="Si tu restar no saber nosotros hacerlo por ti"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry Placeholder="Introduza costo del articulo" x:Name="Costo" TextColor="Green" />
        <Entry Placeholder="Intoduzca dinero del cliente" x:Name="Cliente" TextColor="Red"/>
        <Entry Placeholder="Cambio del cliente" x:Name="Devolucion" TextColor="Blue"/>
        <Button Text="Calcular" x:Name="Resta" Clicked="Resta_Clicked"/>
    </VerticalStackLayout>
</ContentPage>